<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:weightSum="1"
		android:id="@+id/lay1">
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="82dp"
			android:id="@+id/lay"
			android:weightSum="1">
		<TextView android:layout_width="wrap_content"
				  android:layout_height="37dp"
				  android:textAppearance="?android:attr/textAppearanceLarge"
				  android:text="Read Ear Tag             "
				  android:id="@+id/textView3"
				  android:layout_weight="0.09"/>
		<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan"
                android:onClick="scanNow"
                android:id="@+id/scanButn"
                android:layout_weight="0.67"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="67dp"
			android:layout_gravity="center_horizontal"
			android:weightSum="1"
			android:id="@+id/lay2">
		<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Enter ID"
                android:id="@+id/textView"
		/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:hint="Enter Jumbo"
				android:id="@+id/editText2"/>
		<Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:onClick="search"
                android:id="@+id/button"
				android:layout_weight="0.63"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:weightSum="1" android:layout_weight="0.07">
		<TextView
				android:layout_width="204dp"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="View Active Bulls          "
				android:id="@+id/textView48"/>
		<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Bull List"
				android:onClick="bullList"
				android:id="@+id/button2"
				android:layout_weight="0.50"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_weight="0.21">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="View Herd                    "
				android:id="@+id/textView63"/>
		<Button
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="My Herd"
				android:onClick="MyHerd"
				android:id="@+id/button10"/>
	</LinearLayout>
</LinearLayout>