            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Jumbo  Id:"
            android:id="@+id/textView9"
            android:layout_above="@+id/textView4" android:layout_alignRight="@+id/textView10"
            android:layout_alignEnd="@+id/textView10"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            style="?android:attr/ratingBarStyleSmall"
            android:max="5"

            android:stepSize="1" android:layout_below="@+id/textView6" android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" android:layout_marginTop="21dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Animal Id:"
              android:id="@+id/textView10"
              android:layout_alignTop="@+id/textView4" android:layout_alignRight="@+id/textView11"
              android:layout_alignEnd="@+id/textView11"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Sex:"
              android:id="@+id/textView11"
              android:layout_alignTop="@+id/textView5" android:layout_alignRight="@+id/textView13"
              android:layout_alignEnd="@+id/textView13"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Dam id:"
              android:id="@+id/textView12"
              android:layout_alignTop="@+id/textView6" android:layout_alignRight="@+id/textView11"
              android:layout_alignEnd="@+id/textView11"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Replace star:"
              android:id="@+id/textView13"
              android:layout_alignTop="@+id/ratingBar" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Replace star:"
              android:id="@+id/textView14"
              android:layout_centerVertical="true" android:layout_alignRight="@+id/textView12"
              android:layout_alignEnd="@+id/textView12"/>
